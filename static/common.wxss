/* 黑色分隔线 */
.wrap-line{
  width: 100%;
  height: 1px;
  background-color: #E8E8E8;
  margin-bottom: 30rpx;
}
/* 搜索 */
.wrap-select{
  width: 100%;
  height:70rpx;
  line-height: 70rpx;
  background:rgba(245,245,245,1);
  border-radius:34rpx;
  position: relative;
  padding: 0 37rpx;
  box-sizing: border-box;
}
.input-length{
  width: 90%;
  height: 100%;
  line-height: 70rpx;
  font-size: 28rpx;
}
.input-placeholder{
  font-size: 26rpx;
  color: #A1A1A1;
}
.search-icon{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 50%;
  right: 34rpx;
  transform: translateY(-50%);
  text-align: center;
  z-index: 999;
}
.search-icon image{
  width: 90%;
  height: 90%;
  margin: auto;
  display: inline;
}
/* justify-content: space-between;  切换*/
.wrap-tab{
  width: 100%;
  background-color: #fff;
  padding: 0 26rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.tab-li-ture{
  color: #4FBE00;
  font-size: 38rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
  border-bottom: 6rpx solid #4FBE00;
  box-sizing: border-box;
}
.tab-li{
  color: #343434;
  font-size: 38rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
  border-bottom: 4rpx solid #fff;
  box-sizing: border-box;
}
/* display:flex 切换*/
.wrap-tab-inline{
  width: 100%;
  background-color: #fff;
  display: flex;
  margin-bottom: 26rpx;
}
.tab-inline-ture{
  color: #4FBE00;
  font-size: 38rpx;
  font-weight: bold;
  padding-bottom: 27rpx;
  border-bottom: 6rpx solid #4FBE00;
  box-sizing: border-box;
  margin-right: 45rpx;
}
.tab-inline{
  color: #010101;
  font-size: 32rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
  border-bottom: 4rpx solid #fff;
  box-sizing: border-box;
  margin-right: 45rpx;
  margin-top: 1%;
}
/* 热销  详见首页*/
.wrap-title{
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  position: relative;
}
.wrap-title-name{
  font-weight: bold;
  font-size: 38rpx;
  color: #000000;
}
.wrap-title-arrow{
  font-size: 24rpx;
  color: #999999;
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
.wrap-scroll{
  width: 100%;
  display: flex;
  overflow:hidden;
  white-space:nowrap;
  padding-left: 20rpx;
  box-sizing: border-box;
  margin-bottom: 56rpx;
}
.scroll-li{
  width: 240rpx;
  margin-right: 25rpx;
  display: inline-block;
}
.scroll-li-img{
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}
.scroll-li-img image{
  width: 100%;
  height: 100%;
}
.scroll-li-bottom{

}
.scroll-li-bottom-title{
  font-size: 30rpx;
  color: #000000;
  font-weight: bold;
  margin-bottom: 5rpx;
}
.scroll-li-bottom-num{
  font-size: 24rpx;
  color: #565656;
  margin-bottom: 10rpx;
  display: flex;
}
.scroll-li-bottom-price{
  font-size: 34rpx;
  color: #FF4100;
  position: relative;
  width: 100%;
}
.scroll-li-bottom-price text{
  font-size: 18rpx;
}
.li-bottom-price{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 37rpx;
  height: 37rpx;
  border-radius: 50%;
} 
.li-bottom-price image{
  width: 100%;
  height: 100%;
}
/* 暂无数据 */
.no-data{
  margin: auto;
  text-align: center;
}
.no-data-text{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-size: 38rpx;
  font-weight: bold;
}