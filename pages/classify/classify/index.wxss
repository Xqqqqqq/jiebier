page{
  width: 100%;
  height: 100%;
}
.wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.wrap-top{
  width: 100%;
  display: flex;
  padding-left: 24rpx;
  box-sizing: border-box;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f4f4f6;
}
.wrap-position{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}
.wrap-position image{
  width: 100%;
  height: 100%;
  display: inline;
}
.wrap-address{
  font-size:32rpx;
  color: #2A2A2A;
  margin-right: 13rpx;
  margin-top: -4rpx;
}
.wrap-arrow{
  width: 20rpx;
  height: 22rpx;
  margin-top: 1%;
}
.wrap-arrow image{
  width: 100%;
  height: 100%;
  display: inline;
}
/* 分类 */
.cont{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  padding-top: 18rpx;
  box-sizing: border-box;
}
.scr_left{
  width: 180rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: #F6F6F6;
  margin-right: 47rpx;
}
.sc_left_item{
  width: 100%;
  padding: 33rpx 0;
  box-sizing: border-box;
  background-color: #F6F6F6;
}
.active{
  background-color: #fff;
}
.item-title{
  font-size: 30rpx;
  color: #565656;
  width: 100%;
  text-align: center;
  border-left: 10rpx solid #fff;
  box-sizing: border-box;
}
.item-title-active{
  font-size: 36rpx;
  color: #000000;
  width: 100%;
  text-align: center;
  border-left: 10rpx solid #59C204;
  box-sizing: border-box;
}
.scr_right{
  flex: 1;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.sc_right_item{
  width: 124rpx;
  overflow: hidden;
  text-align: left;
  /* margin-bottom: 20rpx; */
  margin-right: 45rpx;
  display: inline-block;
}
.right_item-img{
  width: 100%;
  height: 124rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  border-radius:20rpx;
}
.right_item-img image{
  width: 100%;
  height: 100%;
}
.right_item-box{
  font-size: 30rpx;
  color: #000000;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 这里是超出几行省略 */
  overflow: hidden;
  height: 90rpx;
}