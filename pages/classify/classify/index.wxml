<view class="wrap">
  <view class="wrap-top" bindtap="gotoPos">
    <view class="wrap-position">
      <!-- <image></image> -->
    </view>
    <view class="wrap-address">沈阳</view>
    <view class="wrap-arrow">
      <!-- <image></image> -->
    </view>
  </view>
  <!-- 分类 -->
  <view class="cont">
    <scroll-view scroll-y="true" class="scr_left" scroll-with-animation="true">
      <block wx:for="{{rightData}}" wx:for-item="item" wx:key="index">
        <view class="sc_left_item {{cp_index==index? 'active':''}}"  data-id="c_{{item.id}}" data-index="{{index}}" bindtap="leftTap" >
          <view class="{{cp_index==index? 'item-title-active':'item-title'}}">{{item.name}}</view>
        </view>
        </block>
    </scroll-view>

    <scroll-view scroll-y="true" class="scr_right" scroll-into-view="{{currentScrollId}}" scroll-with-animation="true" bindscroll="bindscroll">
      <block wx:for="{{rightData}}" wx:for-item="item" wx:key="index">
        <view wx:for="{{item.img}}" wx:for-item="itemSmall" wx:key="indexSmall" 
        class="sc_right_item" id="c_{{item.id}}"  data-id="c_{{item.id}}" data-index="{{index}}"
        bindtap="gotoRouter">
          <view class="right_item-img">
            <image src="{{itemSmall.img}}"></image>
          </view>
          <view class="right_item-box">{{itemSmall.name}}</view>
        </view>
      </block>
    </scroll-view>
  </view>
</view>