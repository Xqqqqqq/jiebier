<view class="wrap">
  <view class="wrap-pos">定位城市<text>沈阳</text></view>
  <view class="wrap-recommend">
    <view class="{{currentTab==index ? 'recommend-li-ture' : 'recommend-li'}}"
    wx:for="{{recommendList}}"
    wx:key="index"
    data-current="{{index}}"
    bindtap="clickTab">{{item}}</view>
  </view>
  <view class="i-index-demo" style="height: 100%; position:relative">
    <i-index height="100%" bind:change="onChange">
      <i-index-item
        wx:for="{{ cities }}" 
        wx:for-index="index" 
        wx:key 
        wx:for-item="item" name="{{item.key}}"
        id="c_{{item.key}}"  data-id="c_{{item.key}}">
        <view 
        class="i-index-demo-item" 
        wx:for="{{item.list}}" 
        wx:for-index="in" 
        wx:key 
        wx:for-item="it"
        bindtap="aa"
        data-name="{{it.name}}">
        {{it.name}}
        </view>
      </i-index-item>
    </i-index>
  </view>
</view>