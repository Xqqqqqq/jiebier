.wrap{
  width: 100%;
  background-color: #ffffff;
  padding: 27rpx 24rpx;
  box-sizing: border-box;
}
.news-detail{
  width: 100%;
  background-color: #fff;
  box-shadow:0px 2px 8px 0px #EFEFEF;
  padding: 0 31rpx;
  box-sizing: border-box;
  margin-bottom: 28rpx;
}
.detail-click-li{
  width: 100%;
  padding: 24rpx 0;
  box-sizing: border-box;
  position: relative;
  display: flex;
  border-bottom: 1px solid #E6E6E6;
}
.click-li-img{
  width: 58rpx;
  height: 58rpx;
  margin-right: 22rpx;
  background-color: red;
  border-radius: 5rpx;
}
.click-li-img image{
  width: 100%;
  height: 100%;
}
.click-li-name{
  color: #202020;
  font-size: 34rpx;
  margin-top: 1%;
  font-weight: bold;
}
.click-li-icon{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.detail-li{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #E6E6E6;
}
.detail-li-left{
  color: #202020;
  font-size: 34rpx;
}
.detail-li-left text{
  margin-left: 20rpx;
}
.detail-li-right{
  font-size: 34rpx;
  color: #999999;
}
.detail-li-right text{
  font-size: 18rpx;
}
.detail-li:last-child{
  border-bottom:none;
}
.detail-li-left-other{
  font-weight: bold;
}
.li-right-btn{
  width:79rpx;
  background:rgba(248,248,248,1);
  border:1px solid #999999;
  border-radius:5rpx;
  font-size: 24rpx;
  color: #202020;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  margin-top: -1%;
  margin-left: 23rpx;
}
.news-title{
  font-weight: bold;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.news-info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 26rpx;
  width: 100%;
}