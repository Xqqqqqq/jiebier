.wrap{
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
}
/* 搜索栏 */
.wrap-input{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 22rpx;
}
.wrap-input-name{
  font-size: 32rpx;
  color: #333333;
  line-height: 50rpx;
  height: 50rpx;
}
.wrap-input-select{
  width: 100%;
  height:70rpx;
  line-height: 70rpx;
  background:rgba(245,245,245,1);
  border-radius:34rpx;
  font-size: 26rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
  color: #A1A1A1;
  position: relative;
}
.input-placeholder{
  font-size: 28rpx;
  color: #666;
}
/* 轮播图 */
.wrap-swiper-box{
  width: 100%;
  height: 320rpx;
  margin-bottom: 46rpx;
}
.wrap-swiper{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}
/* 入口列表 */
.wrap-classify{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 49rpx;
}
.wrap-classify-li{
  text-align: center;
}
.classify-li-top{
  width: 90rpx;
  height: 90rpx;
  margin: auto;
  background: linear-gradient(-90deg, #FF6838, #FE4A34);
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.classify-li-bottom{
  font-size: 24rpx;
  color: #363636;
}
/* 列表 */
.wrap-ul{
  width: 100%;
}
.wrap-ul-li{
  width: 100%;
  box-shadow:0px 2px 8px 0px rgba(147, 147, 147, 0.3);
  padding: 33rpx 27rpx;
  box-sizing: border-box;
  display: flex;
  border-radius: 15rpx;
  margin-bottom: 28rpx;
  position: relative;
}
.ul-li-left{
  width: 210rpx;
  height: 210rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: red;
  margin-right: 30rpx;
}
.ul-li-left image{
  width: 100%;
  height: 100%;
}
.ul-li-right{
  width: 65%;
  height: 210rpx;
}
.li-right-title{
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}
.li-right-bg{
  display: inline;
  height: 33rpx;
  background: #FFECC9;
  border-radius: 5rpx;
  text-align: center;
  line-height: 33rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #D46F09;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.li-right-price{
  font-size: 22rpx;
  color: #8A8A8A;
  margin-bottom: 5rpx;
}
.li-right-price text{
  text-decoration: line-through;
}
.li-right-origin{
  font-size: 22rpx;
  color: #FD3E3B;
}
.li-right-origin text{
  font-size: 34rpx;
  font-weight: bold;
}
.ul-li-pos{
  position: absolute;
  right: 24rpx;
  bottom: 34rpx;
}
.li-pos-info{ 
  font-size: 20rpx;
  color: #939393;
  margin-bottom: 10rpx;
}
.li-pos-info text{
  color: #FD3E3B;
}
.li-pos-btn{
  height: 54rpx;
  background: linear-gradient(-90deg, #DA1824, #FE3523);
  border-radius: 26rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
  line-height: 54rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}