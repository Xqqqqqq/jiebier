page{
  width: 100%;
  /* height: 100%; */
}
.containner{
  display: flex;
  flex-direction: column;
  width: 100%;
  /* height: 100%; */
}
/* 顶部 */
.top{
  width: 100%;
}
.top-banner{
  width: 100%;
  height: 250rpx;
  position: relative;
  margin-bottom: 40rpx;
}
.top-banner-img{
  width: 100%;
  height: 100%;
}
.top-banner-mask{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background:rgba(41,41,41,0.4);
}
.top-banner-logo{
  width:111rpx;
  height:111rpx;
  border-radius:20rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top:38rpx;
  overflow: hidden;
  /* background-color: red; */
}
.top-banner-logo image{
  width: 100%;
  height: 100%;
}
.top-banner-name{
  font-weight: bold;
  font-size: 38rpx;
  color: #FFFFFF;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom:37rpx;
  width: 100%;
  text-align: center;
}
.top-hot{
  width: 100%;
}
.scroll-li-bottom-num-score{
  padding: 0 5rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border:1px solid rgba(236,94,91,1);
  border-radius:5rpx;
  font-size: 20rpx;
  color: #FF4100;
  text-align: center;
  margin-right: 10rpx;
}
.line-block{
  width: 100%;
  height: 20rpx;
  background-color: #F8F8F8;
}
/* 商品区 */
.cont{
  width: 100%;
  /* height: 100%; */
  padding-top: 30rpx;
  box-sizing: border-box;
}
.cont-box{
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.scr_left{
  width: 180rpx;
  /* height: 100%; */
  height: calc(100% - 97rpx);
  box-sizing: border-box;
  background-color: #F6F6F6;
  float: left;
}
.scr_right{
  /* height: 100%; */
  height: calc(100% - 97rpx);
  padding-right: 25rpx;
  box-sizing: border-box;
  float: right;
  width: 72%;
}
.sc_left_item{
  width: 100%;
  padding: 33rpx 0;
  box-sizing: border-box;
  background-color: #F6F6F6;
}
.active{
  background-color: #fff;
}
.item-title{
  font-size: 30rpx;
  color: #565656;
  width: 100%;
  text-align: center;
  border-left: 10rpx solid #fff;
  box-sizing: border-box;
}
.item-title-active{
  font-size: 36rpx;
  color: #000000;
  width: 100%;
  text-align: center;
  border-left: 10rpx solid #59C204;
  box-sizing: border-box;
}
.sc_right_item{
  width: 100%;
  margin-bottom: 25rpx;
  box-shadow:0px 2px 8px 0px #EFEFEF;
  display: flex;
  padding: 25rpx 22rpx;
  box-sizing: border-box;
}
.right_item-img{
  width: 124rpx;
  height: 124rpx;
  /* background-color: red; */
  overflow: hidden;
  border-radius: 20rpx;
  margin-right: 40rpx;
  margin-top: 5rpx;
}
.right_item-img image{
  width: 100%;
  height: 100%;
}
.right_item-box{
  width: 70%;
}
.item-box-title{
  font-size: 32rpx;
  color: #000000;
  margin-bottom: 10rpx;
}
.item-box-num{
  display: flex;
  margin-bottom: 10rpx;
}
.box-num-score{
  background:rgba(255,255,255,1);
  border:1px solid rgba(236,94,91,1);
  border-radius:5rpx;
  text-align: center;
  padding: 0 5rpx;
  box-sizing: border-box;
  margin-right: 10rpx;
  font-size: 20rpx;
  color: #FF4100;
}
.box-num{
  font-size: 24rpx;
  color: #565656;
}
.item-box-price{
  position: relative;
  font-size: 34rpx;
  color: #FF4100;
}
.item-box-price text{
  font-size: 18rpx;
}
.item-box-price-btn{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 50%;
}
.item-box-price-btn image{
  width: 100%;
  height: 100%;
}
