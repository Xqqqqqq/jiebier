.bottom-left-shop{
  width: 60rpx;
  height: 47rpx;
  position: relative;
}
.bottom-left-shop image{
  width: 100%;
  height: 100%;
}
.left-shop-num{
  position: absolute;
  top: -15%;
  right: -11%;
  background-color: green;
  border-radius: 50%;
  font-size: 18rpx;
  color: #fff;
  padding: 0 10rpx;
  box-sizing: border-box;
  min-width: 26rpx;
  min-height: 26rpx;
  line-height: 26rpx;
  text-align: center;
}
.bottom-left-price{
  font-size: 36rpx;
  color: #000000;
  font-weight: bold;
}
.bottom-left-price text{
  font-size: 18rpx;
  color: #1C1C1C;
  font-weight: normal;
}
.add-cart{
  width: 60rpx;
  height: 60rpx;
  background-color: #9BDF22;
  position: fixed;
  right: 5%;
  bottom: 15%;
  line-height: 60rpx;
  border-radius: 50%;
  text-align: center;
  padding-top: 8rpx;
  box-sizing: border-box;
}
.add-cart image{
  width: 70%;
  height: 70%;
  margin: auto;
}

.wrap-bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 1rpx solid #EAEAEA;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}
.wrap-bottom-right{
  display: flex;
  height: 80rpx;
  border-radius: 38rpx;
  overflow: hidden;
  width: 60%;
}
.bottom-right-li{
  width: 50%;
  text-align: center;
  height: 100%;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
}
.bottom-right-li-yellow{
  background: linear-gradient(90deg,#fdc403,#f59203);
}
.bottom-right-li-orange{
  background: linear-gradient(90deg, #FD5709, #FF7904);
}