/**index.wxss**/
.wrap{
  width: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
/* 搜索栏 */
.wrap-input{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.wrap-input-name{
  font-size: 32rpx;
  color: #333333;
  line-height: 50rpx;
  height: 50rpx;
}
.wrap-input-select{
  width: 100%;
  height:70rpx;
  line-height: 70rpx;
  background:rgba(245,245,245,1);
  border-radius:34rpx;
  font-size: 26rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
  color: #A1A1A1;
  position: relative;
}
.input-placeholder{
  font-size: 28rpx;
  color: #666;
}
/* 轮播图 */
.wrap-swiper-box{
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  height: 236rpx;
  margin-bottom: 40rpx;
}
.wrap-swiper{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
 }
/* 推荐城市 */
.wrap-recommend{
  width: 100%;
  padding-left: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.recommend-li-ture{
  padding: 0 15rpx;
  box-sizing: border-box;
  text-align: center;
  height:70rpx;
  line-height: 70rpx;
  border:1px solid rgba(204,204,204,1);
  border-radius:10rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  min-width: 145rpx;
  background-color: #F7F7F7;
}
.recommend-li{
  padding: 0 15rpx;
  box-sizing: border-box;
  text-align: center;
  height:70rpx;
  line-height: 70rpx;
  border:1px solid rgba(204,204,204,1);
  border-radius:10rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  min-width: 145rpx;
}
/* 选择城市 */
.collapse-item-title{
  color: #333333;
  font-size: 30rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
}
.collapse-item-content{
  display: flex;
  padding: 0;
}
.wrap-recommend-other{
  padding-left: 0rpx;
}
.collapse-label{
  width: 100%;
  display: flex;
}
.collapse-label-title{
  width: 80%;
}