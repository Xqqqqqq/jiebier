/**index.wxss**/
.wrap{
  width: 100%;
}
/* 搜索栏 */
.wrap-input{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.wrap-input-name{
  font-size: 32rpx;
  color: #333333;
  line-height: 50rpx;
  height: 50rpx;
}
.wrap-input-select{
  width: 70%;
  background-color: #dddddd;
  border-radius: 30rpx;
  line-height: 50rpx;
  height: 50rpx;
  font-size: 32rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.input-placeholder{
  font-size: 28rpx;
  color: #666;
}
/* 轮播图 */
.wrap-swiper-box{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 230rpx;
  margin-bottom: 30rpx;
}
.wrap-swiper{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}
swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
 }
/* 热销 */
.wrap-title{
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  position: relative;
}
.wrap-title-name{
  font-weight: bold;
  font-size: 34rpx;
  color: #333333
}
.wrap-title-arrow{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
.wrap-scroll{
  width: 100%;
  display: flex;
  overflow:hidden;
  white-space:nowrap;
  padding-left: 20rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.scroll-li{
  width: 35%;
  margin-right: 20rpx;
  display: inline-block;
}
.scroll-li-img{
  width: 100%;
  height: 200rpx;
  background-color: #999999;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.scroll-li-img image{
  width: 100%;
  height: 100%;
}
.scroll-li-bottom{

}
.scroll-li-bottom-title{
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 5rpx;
}
.scroll-li-bottom-num{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.scroll-li-bottom-price{
  font-size: 36rpx;
  color: orange;
  position: relative;
  width: 100%;
}
.scroll-li-bottom-price text{
  font-size: 24rpx;
}
.li-bottom-price{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  display: flex;
}
.bottom-price-add{
  width: 40rpx;
  height: 40rpx;
  line-height: 35rpx;
  background-color: green;
  text-align: center;
  border-radius: 50%;
}
.bottom-price-del{
  width: 40rpx;
  height: 40rpx;
  line-height: 30rpx;
  border: 1px solid #333333;
  text-align: center;
  border-radius: 50%;
  font-size: 55rpx;
  color: #333333;
  box-sizing: border-box;
}
.bottom-price-num{
  font-size: 30rpx;
  color: #333333;
  margin: 0 10rpx;
}
/* 推荐城市 */
.wrap-recommend{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend-li-ture{
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #dddddd;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.recommend-li{
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #ffffff;
  border: 1px solid #666666;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
/* 选择城市 */
.collapse-item-title{
  color: red;
}
.collapse-item-content{
  display: flex;
}
.collapse-label{
  width: 100%;
  display: flex;
}
.collapse-label-title{
  width: 80%;
}