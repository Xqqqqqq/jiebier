page{
  width: 100%;
  height: 100%;
}
.wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
/* 分类 */
.cont{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  padding-top: 18rpx;
  box-sizing: border-box;
}
.scr_left{
  width: 180rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: #F6F6F6;
  margin-right: 47rpx;
}
.sc_left_item{
  width: 100%;
  padding: 33rpx 0;
  box-sizing: border-box;
  background-color: #F6F6F6;
}
.active{
  background-color: #fff;
}
.item-title{
  font-size: 28rpx;
  color: #0B0B0B;
  width: 100%;
  text-align: center;
  border-left: 8rpx solid #fff;
  box-sizing: border-box;
}
.item-title-active{
  font-size: 28rpx;
  color:#DA1824;
  width: 100%;
  text-align: center;
  border-left: 8rpx solid#DA1824;
  box-sizing: border-box;
}
.scr_right{
  flex: 1;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.sc_right_item{
  width: 124rpx;
  overflow: hidden;
  text-align: center;
  margin-bottom: 50rpx;
  margin-right: 7%;
  display: inline-block;
}
.right_item-img{
  width: 101rpx;
  height: 126rpx;
  margin: auto;
  overflow: hidden;
  margin-bottom: 30rpx;
  border-radius:20rpx;
}
.right_item-img image{
  width: 100%;
  height: 100%;
}
.right_item-box{
  font-size: 26rpx;
  font-weight: 500;
  color: #7A7A7A;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}