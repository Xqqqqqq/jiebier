.wrap{
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
}
.wrap-select-other{
  margin-bottom: 38rpx;
}
/* tab */
.tab-li-other{
  font-size: 32rpx;
  color: #343434;
  padding-bottom: 15rpx;
  box-sizing: border-box;
}
.tab-li-ture-other{
  font-size: 32rpx;
  color: #DA1824;
  border-bottom: 6rpx solid #DA1824;
  padding-bottom: 15rpx;
  box-sizing: border-box;
}
/* 列表 */
.wrap-ul{
  width: 100%;
  margin-top: 20rpx;
}
.wrap-ul-li{
  width: 100%;
  box-shadow:0px 2px 8px 0px rgba(147, 147, 147, 0.3);
  padding: 33rpx 27rpx;
  box-sizing: border-box;
  display: flex;
  border-radius: 15rpx;
  margin-bottom: 28rpx;
  position: relative;
}
.ul-li-left{
  width: 210rpx;
  height: 210rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: red;
  margin-right: 30rpx;
}
.ul-li-left image{
  width: 100%;
  height: 100%;
}
.ul-li-right{
  width: 65%;
  height: 210rpx;
}
.li-right-title{
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}
.li-right-bg{
  display: inline;
  height: 33rpx;
  background: #FFECC9;
  border-radius: 5rpx;
  text-align: center;
  line-height: 33rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #D46F09;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.li-right-price{
  font-size: 22rpx;
  color: #8A8A8A;
  margin-bottom: 5rpx;
}
.li-right-price text{
  text-decoration: line-through;
}
.li-right-origin{
  font-size: 22rpx;
  color: #FD3E3B;
}
.li-right-origin text{
  font-size: 34rpx;
  font-weight: bold;
}
.ul-li-pos{
  position: absolute;
  right: 24rpx;
  bottom: 34rpx;
}
.li-pos-info{ 
  font-size: 20rpx;
  color: #939393;
  margin-bottom: 10rpx;
}
.li-pos-info text{
  color: #FD3E3B;
}
.li-pos-btn{
  height: 54rpx;
  background: linear-gradient(-90deg, #DA1824, #FE3523);
  border-radius: 26rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
  line-height: 54rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}