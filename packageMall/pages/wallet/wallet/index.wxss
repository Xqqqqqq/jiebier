.wrap{
  width: 100%;
}
.wrap-top{
  width: 100%;
  height: 392rpx;
  background: linear-gradient(0deg, #E1564A, #F57B6A);
  position: relative;
  text-align: center;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  padding: 80rpx 0 120rpx 0;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.wrap-top-num{
  font-size: 65rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.wrap-top-title{
  font-size: 24rpx;
  color: #FFFFFF;
}
.wrap-top-pos{
  width: 122rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: rgba(255, 255, 255, .5);
  border-radius: 19rpx;
  text-align: center;
  font-size: 24rpx;
  color: #FFFFFF;
  position: absolute;
  top: 46rpx;
  right: 25rpx;
}
/* 中间部分 */
.wrap-content{
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: -15%;
  position: relative;
  z-index: 999;
}
.wrap-content-li{
  background-color: #fff;
  width: 100%;
  border-radius: 15rpx;
  display: flex;
  justify-content: space-between;
  padding: 44rpx;
  box-sizing: border-box;
  box-shadow:0px 2px 8px 0px rgba(195, 195, 195, .5);
  margin-bottom: 22rpx;
}
.content-li-box{
  text-align: center;
}
.li-box-top{
  font-size: 36rpx;
  font-weight: bold;
  color: #242426;
  margin-bottom: 12rpx;
}
.li-box-bottom{
  font-size: 24rpx;
  color: #A8A8A8;
}
.wrap-content-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #242426;
  margin-top: 15rpx;
  margin-bottom: 37rpx;
}
.content-li-left{
  display: flex;
}
.li-left-img{
  width: 66rpx;
  height: 66rpx;
  background: #FFBB37;
  border-radius: 50%;
  margin-right: 25rpx;
  overflow: hidden;
}
.li-left-img image{
  width: 100%;
  height: 100%;
}
.li-left-text{
  font-size: 30rpx;
  font-weight: bold;
  color: #242426;
  line-height: 66rpx;
}
.content-li-right{
  height: 66rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.li-right-money{
  font-size: 32rpx;
  font-weight: bold;
  color: #FD3E3B;
  text-align: right;
}
.li-right-time{
  font-size: 24rpx;
  color: #C3C3C3;
  text-align: right;
}